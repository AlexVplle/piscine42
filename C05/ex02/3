#include <stdio.h>

int	ft_iterative_power(int nb, int power)
{
	int	result;
	if (power < 0)
		return (0);
	if (!nb && !power)
		return (1);
	result = 1;
	while (power > 0)
	{
		result *= nb;
		power--;
	}
	return (result);
}

int	main()
{
	printf("%d", ft_iterative_power(-2, 3));
}
