#include <unistd.h>

void	ft_putstr(char *str)
{
	while (*str)
	{
		write(1, str, 1);
		write(1, "\n", 1);
		str++;
	}
}

int	ft_strcmp(char *s1, char *s2)
{
	while (*s1 != '\0' && *s1 == *s2)
	{
		s1++;
		s2++;
	}
	return ((unsigned char) *s1 - (unsigned char) *s2);
}

void	sort_argv(int argc, char *argv[])
{
	int		i;
	int		j;
	char	buffer[1000];

	i = 1;
	j = 1;
	while (i < argc)
	{
		while (j < argc - 1 - i)
		{	
			if (ft_strcmp(argv[j], argv[j + 1]) > 0)
			{
				buffer = argv[j];
				argv[j] = argv[j + 1];
				argv[j + 1] = buffer;
			}
			j++;
		}
	i++;
	}
}

int	main(int argc, char *argv[])
{
	int	i;

	sort_argv(argc, argv);
	i = 1;
	while (i < argc)
	{
		ft_putstr(argv[i]);
		i++;
	}
}
